model Role {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)

  // Has many
  user User[]
}

model Ban {
  id Int @id @default(autoincrement())
  description String @db.VarChar(255)
  date_start DateTime @default(now())
  date_end DateTime? // Or add default?

  // Has one
  user User @relation(fields: [userId], references: [id])
  userId Int @db.Integer
}

// PLAN MODELS
model Plan {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  description String @db.Text
  price Float

  // Has many
  user User[]
}

// CHALLENGE MODELS
model Challenge {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  date_start DateTime
  date_end DateTime
  description String @db.Text
  hashtag String @db.VarChar(255)

   // Has one
  instrument Instrument @relation(fields: [id_instrument], references: [id])
  id_instrument Int @db.Integer
  // Has many
  user User[]
  results_snapshot Results_snapshot[]
}

model Results_snapshot {
  id Int @id @default(autoincrement())
  tiktok_username String @db.VarChar(255)
  tiktok_video String @db.VarChar(255)
  tiktok_likes Int

  // Has one
  challenge Challenge @relation(fields: [id_challenge], references: [id])
  id_challenge Int @db.Integer
}

// CATEGORY MODELS
model Category {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  content String @db.VarChar(255)

  // Has many
  instrument Instrument[]
}

model Instrument {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)

  // Has one
  category Category @relation(fields: [id_category], references: [id])
  id_category Int

  // Has many
  user User[]
  challenge Challenge[]
}

// FORUM MODELS
model Section {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  order Int

  // Has many
  topic Topic[]
}

model Topic {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  createdAt DateTime @default(now())
  like_count Int @default(0)
  flag_count Int @default(0)

  // Has one
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  section Section @relation(fields: [sectionId], references: [id])
  sectionId Int

  // Has many
  topic_reaction Topic_reaction[]
  message Message[]
}

model Topic_reaction {
  is_liked Boolean @default(false)
  is_flagged Boolean @default(false)

  // Has one
  user User @relation(fields: [userId], references: [id])
  userId Int
  topic Topic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  topicId Int

  @@id([userId, topicId])
}

model Message {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  content String @db.Text
  like_count Int @default(0)
  flag_count Int @default(0)

  // Has one
  author User @relation(fields: [authorId], references: [id])
  authorId Int
  topic Topic @relation(fields: [topicId], references: [id])
  topicId Int

  // Has many
  message_reaction Message_reaction[]
}

model Message_reaction {
  is_liked Boolean @default(false)
  is_flagged Boolean @default(false)

  // Has one
  user User @relation(fields: [userId], references: [id])
  userId Int
  message Message @relation(fields: [messageId], references: [id], onDelete: Cascade)
  messageId Int

  @@id([userId, messageId])
}

// COURSE MODELS
model Course {
  id Int @id @default(autoincrement())
  name String  @db.VarChar(255)
  description String @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Has many
  lesson Lesson[]
  badge Badge[]
  note Note[]
  user_course User_course[]
}

model Lesson {
  id Int @id @default(autoincrement())
  content String @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order Int
  points Int

  // Has one
  course Course @relation(fields: [courseId], references: [id])
  courseId Int
  video Video @relation(fields: [videoId], references: [id])
  videoId Int

  // Has many
  media Media[]
  note Note[]
  user_lesson User_lesson[]
}

model Media {
  id Int @id @default(autoincrement())
  file String // CHANGER AVEC FILE => lire doc Prisma

  // Has many
  lesson Lesson[]
}

model Video {
  id Int @id @default(autoincrement())
  link String @db.VarChar(255)

  // Has many
  lesson Lesson[]
  timestamp Timestamp[]
}

model Timestamp {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  description String @db.Text
  value String @db.VarChar(50)

  // Has One
  video Video @relation(fields: [videoId], references: [id])
  videoId Int
}

model Badge {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  description String @db.VarChar(255)
  points Int
  display_img String @db.Text

  // Has many
  course Course[]
}

model Note {
  user User @relation(fields: [userId], references: [id])
  userId Int
  course Course @relation(fields: [courseId], references: [id])
  courseId Int
  lesson Lesson @relation(fields: [lessonId], references: [id])
  lessonId Int

  updatedAt DateTime @updatedAt
  content String @db.Text

  @@id([userId, courseId, lessonId])
}

model User_course {
  completion_status Int @default(0)
  is_favorite Boolean @default(false)

  // Has one
  user User @relation(fields: [userId], references: [id])
  userId Int
  course Course @relation(fields: [courseId], references: [id])
  courseId Int

  @@id([userId, courseId])
}

model User_lesson {
  completion_status Int @default(0)

  // Has one
  user User @relation(fields: [userId], references: [id])
  userId Int
  lesson Lesson @relation(fields: [lessonId], references: [id])
  lessonId Int

  @@id([userId, lessonId])
}

// OTHER MODELS
model Infos_bulle {
  id Int @id @default(autoincrement())
  name String  @db.VarChar(255)
  icon String @db.Text
  content  String @db.Text
  date_start DateTime
  date_end DateTime
}